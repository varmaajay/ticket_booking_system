<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css
  ">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
   
</head>

<body>



<!-- Modal -->

<form method="post" action="" class="d-flex px-4 align-items-center justify-content-between">
    <div class="flex-start">
      <h1 class="">LISTING</h1>
    </div>
    <div class="d-flex align-items-center">
      <div class="search">
        <input type="text" placeholder="search" id="search" class="form-control" name="search">
      </div>
      <div class="btn">
        <input type="submit" name="sub_btn" class="btn btn-primary" value="Search">
      </div>
    </div>
  </form>
  <div class="card m-4 p-3">
    <h2>PASSENGERS DETAILS:</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Passanger_id</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone_No</th>
          <th scope="col">Password</th>
        </tr>
      </thead>
      <tbody>
        <% passenger.forEach(function(man) { %>
          <tr>
            <td><%- man.id %></td>
            <td><%- man.name%></td>
            <td><%- man.email%></td>
            <td><%- man.phone_No%></td>
            <td><%- man.password%></td>
    
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
  <div class="card m-4 p-3">
    <h2>TRAVEL DETAILS:</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Travel_ID</th>
          <th scope="col">PASSENGER_NAME</th>
          <th scope="col">FROM</th>
          <th scope="col">TO</th>
          <th scope="col">SEAT NO</th>
          <th scope="col">PRICE</th>
          <th scope="col">TICKET_NO</th>
          <th scope="col">BUS _NO</th>
          <th scope="col">Start</th>
          <th scope="col">End</th>
          <th scope="col" colspan="2">ACTION</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function (user) { %>
          <tr>
            <td><%- user._id %></td>
            <!-- <td> <%-// user.passengerData[0].name %> </td> -->
            <td><%- user.from %></td>
            <td><%- user.To %></td>
            <td><%- user.seat_No %></td>
            <td><%- user.rupees %></td>
            <td><%- user.ticket_No %></td>
            <td><%- user.Bus_No %></td>
            <td><%- user.start %></td>
            <td><%- user.End %></td>
    
            <td><a href='/edit/<%= user._id%>' class='btn btn-info'>Edit</a></td>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Are you sure delete this data</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
    
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">NO</button>
                    <a href='/delete/<%= user._id%>' class='btn btn-info' >YES</a>
                  </div>
                </div>
              </div>
            </div>
            <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">delete</button></td>
          </tr>
          <% } )%>
      </tbody>
    </table>
  </div>
 
  
</body>

</html>
